<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<routes id="routes-480552fc-6929-49c2-97c7-855af8fd791f"
    xmlns="http://camel.apache.org/schema/spring"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://camel.apache.org/schema/spring https://camel.apache.org/schema/spring/camel-spring-2.17.3.xsd">
    <route id="FilterTemperatureDemo">
        <from id="_to2" uri="direct:temperature"/>
        <filter id="Filter out normal temperature">
            <simple>${body} &gt; 20</simple>
            <log id="ALERT" loggingLevel="ERROR" message="ALERT: the sensor has provided a too high value: ${body}"/>
            <to id="STREAM ALERT" uri="stream:out"/>
        </filter>
    </route>
    <route id="Temperature Generator">
        <from id="_from1" uri="timer:triggerCapture"/>
        <setBody id="generateRandomTemperature">
            <simple>random(0,40)</simple>
        </setBody>
        <to id="_to1" uri="direct:temperature"/>
    </route>
</routes>
