<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:camel="http://camel.apache.org/schema/spring"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd        http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
    <camelContext id="camelContext-fb653a39-1a14-4379-a746-1ce838fc66a7"
        trace="false" xmlns="http://camel.apache.org/schema/spring">
        <route id="FilterTemperatureDemo">
            <from id="_to2" uri="direct:temperature"/>
            <filter id="Filter out normal temperature">
                <simple>${body} &gt; 20</simple>
                <log id="ALERT" loggingLevel="ERROR" message="ALERT: the sensor has provided a too high value: ${body}"/>
                <to id="STREAM ALERT" uri="stream:out"/>
            </filter>
        </route>
        <route id="Temperature Generator">
            <from id="_from1" uri="timer:triggerCapture"/>
            <setBody id="generateRandomTemperature">
                <simple>random(0,40)</simple>
            </setBody>
            <to id="_to1" uri="direct:temperature"/>
        </route>
    </camelContext>
</beans>
